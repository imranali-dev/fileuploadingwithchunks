{
  "name": "large-file-upload-system",
  "version": "1.0.0",
  "description": "Production-ready large file upload system with chunked uploads and GridFS storage",
  "main": "app.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "dev:debug": "NODE_ENV=development nodemon --inspect app.js",
    "prod": "NODE_ENV=production node app.js",
    "legacy": "node server.js",
    "build": "echo 'No build step required'",
    "vercel-build": "echo 'Vercel build complete'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "validate": "npm run lint && npm run test",
    "db:seed": "node scripts/seed.js",
    "db:migrate": "node scripts/migrate.js",
    "cleanup": "node scripts/cleanup.js",
    "logs:clear": "rm -rf logs/*",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "deploy": "npm run validate && npm run start",
    "setup": "npm install && npm run validate"
  },
  "keywords": [
    "file-upload",
    "chunked-upload",
    "large-files",
    "gridfs",
    "mongodb",
    "express",
    "multipart",
    "resumable-upload"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imranali-dev/fileuploadingwithchunks.git"
  },
  "bugs": {
    "url": "https://github.com/imranali-dev/fileuploadingwithchunks/issues"
  },
  "dependencies": {
    "express": "^4.19.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "joi": "^17.13.3",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.4.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "@types/jest": "^29.5.14",
    "mongodb-memory-server": "^10.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11"
  },
  "optionalDependencies": {
    "aws-sdk": "^2.1691.0",
    "@sentry/node": "^8.47.0",
    "ioredis": "^5.4.2",
    "nodemailer": "^6.9.16"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}