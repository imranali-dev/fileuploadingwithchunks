# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Atlas Configuration
MONGO_URI=mongodb+srv://Imranali-filesuploader:IR5Kgy5TPgqgE8E4@cluster0.qvhypnz.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
# Example: mongodb+srv://myuser:mypassword@cluster0.abc123.mongodb.net/fileupload?retryWrites=true&w=majority
# Get your connection string from MongoDB Atlas Dashboard

MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_CONNECT_TIMEOUT_MS=10000
MONGO_SOCKET_TIMEOUT_MS=45000

# File Upload Configuration
MAX_FILE_SIZE=5368709120
# 5GB in bytes (5 * 1024 * 1024 * 1024)

CHUNK_SIZE=52428800
# 50MB in bytes (50 * 1024 * 1024)

FILE_EXPIRY_HOURS=24
# Files will be auto-deleted after this many hours

UPLOAD_DIR=./uploads
# Directory for temporary chunk storage

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds

RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# CORS Configuration
ALLOWED_ORIGINS=*
# Comma-separated list: http://localhost:3000,https://yourdomain.com
# Use * for development only

# File Type Restrictions (optional)
# ALLOWED_MIME_TYPES=image/jpeg,image/png,video/mp4,application/pdf
# Leave empty to allow all file types

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# AWS S3 Configuration (Optional - for cloud storage instead of GridFS)
# Uncomment to use S3 instead of MongoDB GridFS
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your_s3_bucket_name
# USE_S3_STORAGE=false

# Logging Configuration
LOG_LEVEL=info
# Options: debug, info, warn, error

LOG_TO_FILE=false
LOG_FILE_PATH=./logs/application.log

# Health Check Configuration
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# Cleanup Configuration
CLEANUP_INTERVAL_MS=3600000
# 1 hour in milliseconds

# Vercel Configuration
VERCEL=true
UPLOAD_DIR=/tmp/uploads

STALE_UPLOAD_TIMEOUT_MS=7200000
# 2 hours in milliseconds

# Request Timeout
REQUEST_TIMEOUT_MS=300000
# 5 minutes in milliseconds

# Database Retry Configuration
DB_MAX_RETRY_ATTEMPTS=5
DB_RETRY_DELAY_MS=5000

# GridFS Configuration
GRIDFS_BUCKET_NAME=uploads
GRIDFS_CHUNK_SIZE_BYTES=261120
# 255KB chunks

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Redis Configuration (Optional - for advanced rate limiting)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# USE_REDIS=false

# Email Notifications (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# ADMIN_EMAIL=admin@yourdomain.com

# API Documentation
API_DOCS_ENABLED=true
API_VERSION=v1

# Feature Flags
ENABLE_COMPRESSION=true
ENABLE_REQUEST_LOGGING=true
ENABLE_CORS=true